<EditUserWidget>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.016, 0.118, 0.259, 1.0
            Rectangle:
                pos: self.pos
                size: self.size
        ScrollView:
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            GridLayout:
                id: UserGrid
                cols: 7
                padding: root.width / 16, root.height / 16
                spacing: 10
                size: 600, 500
                height: self.minimum_height
                size_hint_y: None
    BoxLayout:
        id: EditUserBox
        padding: root.width / 4, root.height / 16