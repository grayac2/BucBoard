#:kivy 1.10.0
<AddAnnouncementWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width / 8, root.height / 8
        canvas.before:
            Color:
                rgba: 0.016, 0.118, 0.259, 1.0
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            cols: 2
            spacing: 10
            id: form_layout

            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                text: 'Professor'
                font_size: '25sp'
            Spinner:
                id: professor
                size_hint_y: None
                height: 35
                font_size: '20sp'
                values: root.professor_list

            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                text: 'Room Number'
                font_size: '25sp'
            Spinner:
                id: roomNumber
                size_hint_y: None
                height: 35
                font_size: '20sp'
                values: root.room_list

            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                text: 'Title'
                font_size: '25sp'
            TextInput:
                id: title
                size_hint_y: None
                height: 35
                font_size: '20sp'
                write_tab: False
                multiline: False
                on_text_validate: root.submit_new_announcement()

            Label:
                halign: 'right'
                valign: 'top'
                text_size: self.size
                size_hint_y: None
                height: 200
                size_hint_min_x: 210
                text: 'Announcement'
                font_size: '25sp'
            TextInput:
                id: announcement
                size_hint_y: None
                size_hint_min_x: 210
                height: 200
                font_size: '20sp'


        BoxLayout:
            Button:
                id: submitButton
                text: "Create Announcement"
                font_size: '30sp'
                size_hint: (1, None)
                height: 50
                background_normal: ''
                background_color: 1, .78, .17, 1
                color: 0, 0, 0, 1
                on_press: root.submit_new_announcement()