#:kivy 1.10.0
<AddBuildingWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width / 8, root.height / 8
        canvas.before:
            Color:
                rgba: 0.016, 0.118, 0.259, 1.0
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            id: form_layout
            cols: 2
            spacing: 10

            #Building Name Label/TextInput
            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                text: 'Building Name'
                font_size: '25sp'

            TextInput:
                id: buildingNameTextBox
                size_hint_y: None
                height: 35
                font_size: '20sp'
                write_tab: False
                multiline: False
                on_text_validate: root.submit_new_building()

            #Building Label/Spinner
            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                size_hint_min_x: 195
                text: 'Campus'
                font_size: '25sp'

        BoxLayout:
            #Submit Button
            Button:
                id: submitButton
                text: "Create Building"
                font_size: '30sp'
                size_hint: (1, None)
                height: 50
                background_normal: ''
                background_color: 1, .78, .17, 1
                color: 0, 0, 0, 1
                on_press: root.submit_new_building()

