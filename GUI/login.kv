#:kivy 1.10.0
<LoginWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width / 8, root.height / 8
        canvas.before:
            Color:
                rgba: 0.016, 0.118, 0.259, 1.0
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'BucBoard'
            font_size: '100sp'
            color: 1, .78, .17, 1

        GridLayout:
            cols: 2
            spacing: 10

            #Room Number Label/TextInput
            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                text: 'Username'
                font_size: '25sp'

            TextInput:
                size_hint_y: None
                height: 35
                font_size: '20sp'
                write_tab: False
                multiline: False

            #Building Label/Spinner
            Label:
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 35
                text: 'Password'
                font_size: '25sp'

            TextInput:
                size_hint_y: None
                height: 35
                font_size: '20sp'
                write_tab: False
                multiline: False
                password: True
                on_text_validate: root.change_screen()


        BoxLayout:
            #Submit Button
            Button:
                id: submitButton
                text: "Login"
                font_size: '30sp'
                size_hint: (1, None)
                height: 50
                background_normal: ''
                background_color: 1, .78, .17, 1
                color: 0, 0, 0, 1
                on_release: root.change_screen()
